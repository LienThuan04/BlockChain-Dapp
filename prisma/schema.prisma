generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.LongText
  expiresAt   DateTime
}

model User {
  id Int @id @default(autoincrement())
  email String @unique @db.VarChar(255)
  password String @db.VarChar(255)
  fullName String? @db.VarChar(255)
  address String? @db.VarChar(255)
  phone String? @db.VarChar(255)
  accountType String @db.VarChar(255)
  avatar String? @db.VarChar(255)
  createdAt DateTime @default(now()) //lưu ngày tạo 
  updatedAt DateTime @updatedAt //lưu ngày cập nhật

  role Role @relation(fields: [roleId], references: [id])
  roleId Int

  cart cart? // mối quan hệ với cart đối chiếu bằng thuộc tính này và ? optional khi mới tạo người dùng thì đây chưa có giỏ hàng, quan hệ 1-1
  orders Order[] // mối quan hệ với order thông qua id của bảng user được đưa vào cột userId của bảng order, quan hệ 1-n
  reviews Review[]
  @@map("users")
  
}

model Role {
  id Int @id @default(autoincrement())
  name String @unique @db.VarChar(255)
  description String @db.VarChar(255)

  users User[]

  @@map("roles")
}

model Product {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  price Int
  image String? @db.VarChar(255)
  detailDesc String @db.MediumText
  shortDesc String @db.VarChar(255)
  quantity Int
  sold Int @default(0)
  status String @default("DRAFT")
  createdAt DateTime @default(now()) //lưu ngày tạo 
  updatedAt DateTime @updatedAt //lưu ngày cập nhật

  factory   Factory   @relation(fields: [factoryId], references: [id])
  factoryId Int
  target    Target    @relation(fields: [targetId], references: [id])
  targetId  Int

  productVariants ProductVariant[]
  cartDetails cartdetail[]
  orderDetails OrderDetail[]
  reviews Review[]
  productImages ProductImage[]

  @@map("products")
}

model ProductImage {
  id Int @id @default(autoincrement())
  urlImage String @db.VarChar(255)
  product Product @relation(fields: [productId], references: [id])
  productId Int
  
  @@map("product_images")
}

model ProductVariant {
  id Int @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  cpu String @db.VarChar(255)
  memory String @db.VarChar(255)
  priceMore Int? @default(0)
  color String @db.VarChar(255)
  quantity Int
  sold Int @default(0)
  cartDetails cartdetail[]
  orderDetails OrderDetail[]

  @@map("product_variants")

}

// ACTIVE (Đang bán/Hiển thị)
// INACTIVE (Ẩn/Ngừng bán tạm thời)
// OUT_OF_STOCK (Hết hàng)
// DISCONTINUED (Ngừng kinh doanh vĩnh viễn)
// DRAFT (Chưa lên sàn/Chưa công khai)
// PENDING (Chờ duyệt)
// DELETED (Đã xóa/Ẩn khỏi hệ thống)

model Factory {
  id      Int       @id @default(autoincrement())
  name    String    @unique @db.VarChar(255)
  description String @db.Text
  products Product[]

  @@map("factories")
}

model Target {
  id      Int       @id @default(autoincrement())
  name    String    @unique @db.VarChar(255)
  description String @db.Text
  products Product[]

  @@map("targets")
}


model cart {
  id Int @id @default(autoincrement())
  quantity Int? @default(0)

  user User @relation(fields: [userId], references: [id])
  userId Int @unique //mối quan hệ với user với id và chỉ có duy nhất 1 user cho 1 cart - quan hệ 1-1

  cartDetails cartdetail[] //mối quan hệ với cartdetail thông qua id của bảng cart được đưa vào cột cartid của bảng này. nếu thay [] thành ? nghĩa là chỉ có duy nhất 1

  @@map("carts")
}

model cartdetail{
  id Int @id @default(autoincrement())
  price Int
  quantityProduct Int? @default(0)

  cart cart @relation(fields: [cartId], references: [id])
  cartId Int

  product Product @relation(fields: [productId], references: [id])
  productId Int

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id])
  productVariantId Int

  @@map("cart_details")
}


model Order {
  id Int @id @default(autoincrement())
  totalPrice Int
  receiverName String @db.VarChar(255)
  receiverPhone String @db.VarChar(20)
  receiverAddress String @db.Text
  receiverEmail String? @db.VarChar(255)
  receiverNote String? @db.Text
  statusOrder String @db.VarChar(20) @default("PENDING")

  paymentMethod String
  paymentStatus String
  paymentRef String?

  createdAt DateTime @default(now()) //lưu ngày tạo 
  updatedAt DateTime @updatedAt //lưu ngày cập nhật

  User User @relation(fields: [userId], references: [id])
  userId Int

  orderDetails OrderDetail[]
  reviews Review[]

  @@map("orders")
}

model OrderDetail{
  id Int @id @default(autoincrement())
  price Int
  quantity Int

  order Order @relation(fields: [orderId], references: [id])
  orderId Int 

  product Product @relation(fields: [productId], references: [id])
  productId Int

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id])
  productVariantId Int

  @@map("order_details")
}

model Review {
  id Int @id @default(autoincrement())
  rating Int @default(5)
  content String @db.Text

  user User @relation(fields: [userId], references: [id])
  userId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int
  Order Order @relation(fields: [orderId], references: [id])
  orderId Int
  createdAt DateTime @default(now()) //lưu ngày tạo
}
