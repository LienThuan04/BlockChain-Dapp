<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Detail Order History - laptopshop</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <link rel="icon" type="image/svg+xml" href="/im/Logo-Client.svg">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="/client/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/client/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css" integrity="sha512-wJgJNTBBkLit7ymC6vvzM1EcSWeM9mmOu+1USHaRBbHkm6W9EgM0HY27+UtUaprntaYQJF75rc8gjxllKs5OIQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
        class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->


    <!-- Navbar start -->
    <%- include('../layout/header.ejs') -%>
        <!-- Navbar End -->
        <div class="py-4"></div>
        <!-- Single Product Start -->
        <div class="container-fluid py-5 mt-5">
            <div class="container py-5">
                <ol class="breadcrumb mb-0" style="cursor: pointer;">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item"><a href="/order-history">Lịch sử đơn hàng</a></li>
                                <li class="breadcrumb-item active">Chi tiết đơn hàng</li>
                            </ol>
                <br>
                <h1 class="mb-4">Chi tiết đơn hàng</h1>
                <div >
                        <% if (history && history.id) { %>
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="card shadow-sm mb-3 border-warning">
                                        <div
                                            class="card-body d-flex flex-column align-items-center justify-content-between">
                                            <div class="w-100">
                                                <div class="d-flex flex-wrap align-items-center justify-content-between ">
                                                    <h5 class="card-title mb-1">Mã đơn hàng:
                                                        <span class="text-primary"><%= history.id %>
                                                        </span>
                                                    </h5>
                                                    <p class="mb-1">Trạng thái: <span
                                                            class="fw-bold text-success">
                                                            <% if (history.statusOrder === 'PENDING') { %>
                                                                Đang chờ xử lý
                                                            <% } else if (history.statusOrder === 'PROCESSING') { %>
                                                                Đang xử lý
                                                            <% } else if (history.statusOrder === 'CONFIRMED') { %>
                                                                Đã xác nhận
                                                            <% } else if (history.statusOrder === 'PACKED') { %>
                                                                Đã đóng gói
                                                            <% } else if (history.statusOrder === 'SHIPPED') { %>
                                                                Đã giao cho đơn vị vận chuyển
                                                            <% } else if (history.statusOrder === 'DELIVERED') { %>
                                                                Đã giao thành công
                                                            <% } else if (history.statusOrder === 'CANCELLED') { %>
                                                                Đã hủy
                                                            <% } else if (history.statusOrder === 'RETURNED') { %>
                                                                Đã trả hàng
                                                            <% } else if (history.statusOrder === 'REFUNDED') { %>
                                                                Đã hoàn tiền
                                                            <% } else { %>
                                                                Không xác định
                                                            <% } %>
                                                        </span>
                                                    </p>
                                                </div>
                                                <br>
                                                <div class="d-flex flex-wrap align-items-center justify-content-between" tyle="gap: 1rem;">
                                                    <div class="row w-100">
                                                        <div class="col-12 col-md-6 mb-2 mb-md-0">
                                                            <div class="d-flex flex-column">
                                                                <p class="my-1">Ngày đặt hàng: <span class="fw-bold text-dark"><%= (() => { const d = new Date(history.createdAt); const l = new Date(d.getTime() + 7 * 60 * 60 * 1000); const w = ['Chủ Nhật','Thứ Hai','Thứ Ba','Thứ Tư','Thứ Năm','Thứ Sáu','Thứ Bảy'][l.getDay()]; return `${w}, ${String(l.getDate()).padStart(2,'0')}/${String(l.getMonth()+1).padStart(2,'0')}/${l.getFullYear()} - ${String(l.getHours()).padStart(2,'0')}:${String(l.getMinutes()).padStart(2,'0')}` })() %></span></p>
                                                                <p class="my-1">Phương thức thanh toán: <span class="fw-bold text-success"><%= history.paymentMethod %></span></p>
                                                                <p class="my-1">Số điện thoại người nhận: <span class="fw-bold text-dark"><%= history.receiverPhone %> </span></p>
                                                            </div>
                                                        </div>
                                                        <div class="col-12 col-md-6 mb-2 mb-md-0">
                                                            <div class="d-flex flex-column">
                                                                <p class="my-1">Email người nhận(Nếu có): <span class="fw-bold text-dark"><%= history.receiverEmail %> </span></p>
                                                                <p class="my-1">Địa chỉ nhận hàng: <span class="fw-bold text-dark"><%= history.receiverAddress %> </span></p>
                                                                <p class="my-1">Ghi chú: <span class="fw-bold text-danger"><%= history.receiverNote %> </span></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                         
                                                </div>
                                                <br>
                                                <div class="table-responsive">
                                                    <table class="table text-center">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col">Sản phẩm</th>
                                                                <th scope="col">Tên</th>
                                                                <th scope="col">Cấu hình</th>
                                                                <th scope="col">Giá</th>
                                                                <th scope="col">Số lượng</th>
                                                                <th scope="col">Tổng cộng</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% if ( history.orderDetails && history.orderDetails.length > 0) { %>
                                                                <% history.orderDetails.forEach((item, index)=> { %>
                                                                    <tr class="detailCartId:<%= item.id %>">
                                                                        <th scope="row">
                                                                            <div
                                                                                class="d-flex align-items-center justify-content-center">
                                                                                <img src="<%= item.product.image ? '/images/products/' + item.product.image : '/client/img/default-product.png' %>"
                                                                                    class="img-fluid me-5 rounded-circle"
                                                                                    style="width: 80px; height: 80px; min-width: 50px; min-height: 50px;"
                                                                                    alt="image product <%= item.product.name %>">
                                                                            </div>
                                                                        </th>
                                                                        <td>
                                                                            <p class="mb-0 mt-4 text-primary">
                                                                                <a href="/product/<%= item.product.id %>"
                                                                                    class="text-decoration-none fw-bold">
                                                                                    <%= item.product.name %>
                                                                                </a>
                                                                            </p>
                                                                        </td>
                                                                        <td>
                                                                            <% if (item.productVariant && item.productVariant.id) { %>
                                                                                <div class="d-flex justify-content-center align-items-center mt-4 w-100">
                                                                                    <span class="badge bg-info text-dark fs-5 px-4 py-2" style="font-size: 0.8rem !important;">
                                                                                        <%= item.productVariant.cpu %> | <%= item.productVariant.memory %> | <%= item.productVariant.color %>
                                                                                    </span>
                                                                                </div>
                                                                            <% } else { %>
                                                                                <span class="text-muted">Không có</span>
                                                                            <% } %>
                                                                        </td>
                                                                        <td>
                                                                            <p class="mb-0 mt-4 text-dark fw-bold">
                                                                                <% const variantPriceMore = (item.productVariant && item.productVariant.priceMore) ? item.productVariant.priceMore : 0; %>
                                                                                <% const unitPrice = (item.product && item.product.price ? item.product.price : 0) + variantPriceMore; %>
                                                                                <%= unitPrice.toLocaleString('vi-VN') %> VND
                                                                            </p>
                                                                        </td>
                                                                        <td>
                                                                            <p class="mb-0 mt-4 text-warning fw-bold">
                                                                                <%= item.quantity %>
                                                                            </p>
                                                                        </td>
                                                                        <td>
                                                                            <p class="mb-0 mt-4 text-danger fw-bold"
                                                                                data-OutPutCartDetail-id="<%= item.id %>">
                                                                                <%= (unitPrice * item.quantity).toLocaleString('vi-VN') %> VND
                                                                            </p>
                                                                            <% if (String(history.paymentMethod || '').toUpperCase() === 'CRYPTO' && typeof item.lineCrypto !== 'undefined' && typeof cryptoActive !== 'undefined') { %>
                                                                                <div class="text-muted small">~ <%= item.lineCrypto %> <%= cryptoActive.symbol || cryptoActive.code %></div>
                                                                            <% } %>
                                                                        </td>
                                                                    </tr>
                                                                <% }) %>
                                                                        <% } else { %>
                                                                            <tr>
                                                                                <td colspan="6" class="text-center">Giỏ
                                                                                    hàng trống</td>
                                                                            </tr>
                                                                            <% } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="d-flex flex-wrap align-items-center justify-content-end g-3"
                                                    style="gap: 1rem;">
                                                    <p class="mb-1 mx-2">Số lượng sản phẩm: <span
                                                            class="fw-bold text-warning"><%= history.orderDetails.map(item => item.quantity).reduce((a, b) => a + b, 0) %>
                                                        </span></p>
                                                        <p class="mb-1 mx-4">Tổng số tiền: <span
                                                            class="fw-bold text-danger"><%= history.totalPrice.toLocaleString('vi-VN') %> VND</span></p>
                                                        <% if (String(history.paymentMethod || '').toUpperCase() === 'CRYPTO' && typeof history.cryptoTotal !== 'undefined' && typeof cryptoActive !== 'undefined') { %>
                                                        <p class="mb-1 mx-4 text-muted small">Crypto total: ~ <%= history.cryptoTotal %> <%= cryptoActive.symbol || cryptoActive.code %></p>
                                                        <% } %>
                                                </div>
                                            </div>
                                            <% if ((history && history.statusOrder === 'PENDING') || (history && history.statusOrder === 'PROCESSING') || (history && history.statusOrder === 'CONFIRMED') || (history && history.statusOrder === 'PACKED')) { %>
                                            <div class="mt-3 d-flex justify-content-end w-100 mx-3">
                                                <button type="button" class="btn btn-outline-danger btn-sm mx-4 cancelOrderBtn" data-order-id="<%= history.id %>">Hủy đơn hàng này</button>
                                            </div>
                                            <% } else if (history && history.statusOrder === 'SHIPPED') { %>
                                                <div class="mt-3 d-flex justify-content-end w-100 mx-3">
                                                    <a class="btn btn-outline-danger btn-sm mx-4 disabled" >Hủy đơn hàng này</a>
                                                </div>
                                            <% } else if (history && history.statusOrder === 'DELIVERED') { %>
                                                <div class="mt-3 d-flex justify-content-end w-100 mx-3">
                                                    <a class="btn btn-outline-danger btn-sm mx-4 disabled" >Yêu cầu trả hàng và hoàn tiền</a>
                                                </div>
                                            <% } %>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                                <div class="alert alert-info">Bạn không có đơn hàng nào của trang này.</div>
                        <% } %>
                    </div>
            </div>
        </div>
        <!-- Single Product End -->


        <!-- Footer Start -->
        <%- include('../layout/footer.ejs') -%>
            <!-- Footer End -->




            <!-- Back to Top -->
            <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i
                    class="fa fa-arrow-up"></i></a>


            <!-- JavaScript Libraries -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/client/lib/easing/easing.min.js"></script>
            <script src="/client/lib/waypoints/waypoints.min.js"></script>
            <script src="/client/lib/lightbox/js/lightbox.min.js"></script>
            <script src="/client/lib/owlcarousel/owl.carousel.min.js"></script>

            <!-- Template Javascript -->
            <script src="/client/js/main.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js" integrity="sha512-zlWWyZq71UMApAjih4WkaRpikgY9Bz1oXIW5G0fED4vk14JjGlQ1UmkGM392jEULP8jbNMiwLWdM8Z87Hu88Fw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

            <script>
                // Embed server-side order payment info (safe JSON) so client UI can adapt messages
                const _orderPaymentMethod = "<%= (history && history.paymentMethod) ? String(history.paymentMethod).toUpperCase() : '' %>";
                const _orderPaymentStatus = "<%= (history && history.paymentStatus) ? String(history.paymentStatus).toUpperCase() : '' %>";

                // Handle cancel order button
                document.querySelectorAll('.cancelOrderBtn').forEach(btn => {
                    btn.addEventListener('click', async function() {
                        const orderId = this.getAttribute('data-order-id');

                        // Only mention refund when this order was paid via CRYPTO and has a PAID status
                        const mentionsRefund = (_orderPaymentMethod === 'CRYPTO') && (_orderPaymentStatus === 'PAID' || _orderPaymentStatus === 'PAYMENT_PAID');
                        const baseConfirm = 'Bạn có chắc chắn muốn hủy đơn hàng này không?';
                        const confirmMsg = mentionsRefund ? baseConfirm + ' Tiền sẽ được hoàn lại cho bạn.' : baseConfirm;

                        if (!confirm(confirmMsg)) {
                            return;
                        }

                        try {
                            const response = await fetch(`/cancel-order/${orderId}`, {
                                method: 'POST',
                                headers: {
                                    'Accept': 'application/json',
                                    'Content-Type': 'application/json'
                                }
                            });

                            const data = await response.json();

                            if (data.success) {
                                // Prefer server-provided refund info for accurate messaging
                                const refund = data.refund || null;
                                if (refund && refund.attempted && refund.method === 'CRYPTO') {
                                    if (refund.success) {
                                        alert('✅ Hủy đơn hàng thành công. Hoàn tiền bằng crypto đã được thực hiện. Tx: ' + (refund.txHash || '—'));
                                    } else {
                                        alert('⚠️ Hủy đơn hàng thành công nhưng hoàn tiền crypto thất bại. Vui lòng liên hệ hỗ trợ.');
                                    }
                                } else if (refund && refund.attempted && refund.method === 'PAYPAL') {
                                    if (refund.success) {
                                        alert('✅ Hủy đơn hàng thành công. Hoàn tiền PayPal đã được thực hiện.');
                                    } else {
                                        alert('⚠️ Hủy đơn hàng thành công nhưng hoàn tiền PayPal thất bại. Vui lòng liên hệ hỗ trợ.');
                                    }
                                } else {
                                    // No refund attempted or not a crypto/paypal flow
                                    alert('✅ ' + (data.message || 'Hủy đơn hàng thành công'));
                                }

                                // Reload page after 1 second to show updated status
                                setTimeout(() => {
                                    location.reload();
                                }, 1000);
                            } else {
                                alert('❌ ' + (data.message || 'Hủy đơn hàng thất bại'));
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            alert('❌ Lỗi khi hủy đơn hàng');
                        }
                    });
                });
            </script>

</body>

</html>