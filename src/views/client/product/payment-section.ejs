                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script thanh toán crypto -->
<script src="/client/js/crypto-payment.js">
// Cấu hình tỷ giá
const VND_TO_SGB_RATE = 1000000; // 1,000,000 VND = 1 SGB

// Hàm chuyển đổi VND sang SGB
function convertVNDtoSGB(vndAmount) {
    // Công thức: số tiền VND / 1,000,000
    return (parseInt(vndAmount) / VND_TO_SGB_RATE).toFixed(6);
}

let web3;
let userAccount;

async function initWeb3() {
    if (typeof window.ethereum !== 'undefined') {
        try {
            // Yêu cầu kết nối với Metamask
            await window.ethereum.request({ method: 'eth_requestAccounts' });
            
            // Khởi tạo Web3
            web3 = new Web3(window.ethereum);
            
            // Lấy tài khoản người dùng
            const accounts = await web3.eth.getAccounts();
            userAccount = accounts[0];

            // Chuyển sang mạng Coston
            await switchToCoston();
            
            return true;
        } catch (error) {
            console.error('Lỗi kết nối Metamask:', error);
            showCryptoMessage('Lỗi: ' + error.message);
            return false;
        }
    } else {
        showCryptoMessage('Vui lòng cài đặt Metamask để thanh toán bằng cryptocurrency');
        return false;
    }
}

async function switchToCoston() {
    try {
        await window.ethereum.request({
            method: 'wallet_switchEthereumChain',
            params: [{ chainId: '0x10' }], // 16 in hex
        });
    } catch (switchError) {
        // Nếu mạng chưa được thêm vào Metamask
        if (switchError.code === 4902) {
            try {
                await window.ethereum.request({
                    method: 'wallet_addEthereumChain',
                    params: [{
                        chainId: '0x10',
                        chainName: 'Songbird Coston Testnet',
                        nativeCurrency: {
                            name: 'Songbird',
                            symbol: 'SGB',
                            decimals: 18
                        },
                        rpcUrls: ['https://coston-api.flare.network/ext/bc/C/rpc'],
                        blockExplorerUrls: ['https://coston-explorer.flare.network']
                    }]
                });
            } catch (addError) {
                throw new Error('Không thể thêm mạng Coston vào Metamask');
            }
        }
    }
}

function showCryptoMessage(message, showDetails = false) {
    const modal = new bootstrap.Modal(document.getElementById('cryptoModal'));
    document.getElementById('cryptoMessage').innerHTML = message;
    document.getElementById('transactionDetails').style.display = showDetails ? 'block' : 'none';
    modal.show();
}

async function purchaseWithCrypto(productId, priceInVND) {
    try {
        const connected = await initWeb3();
        if (!connected) return;

        // Lấy địa chỉ ví admin từ server
        const response = await fetch('/api/get-admin-wallet');
        const { adminWallet } = await response.json();

        // Chuyển đổi giá từ VND sang SGB
        // Giả sử 1 SGB = 300,000 VND
        // Giá trong database đang lưu dưới dạng số nguyên VND
        const priceInSGB = (parseInt(priceInVND) / 300000).toFixed(6);
        const weiValue = web3.utils.toWei(priceInSGB, 'ether');

        // Hiển thị thông tin giao dịch
        document.getElementById('cryptoAmount').textContent = `${priceInSGB} SGB`;
        document.getElementById('receiverAddress').textContent = adminWallet;
        showCryptoMessage('Xác nhận thanh toán:', true);

        // Xử lý khi người dùng xác nhận thanh toán
        document.getElementById('confirmCryptoPayment').onclick = async () => {
            try {
                // Gửi giao dịch
                const result = await web3.eth.sendTransaction({
                    from: userAccount,
                    to: adminWallet,
                    value: weiValue,
                    gas: '21000'
                });

                if (result.status) {
                    // Gửi thông tin giao dịch lên server
                    const confirmResponse = await fetch('/api/orders/confirm-crypto-payment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            productId,
                            transactionHash: result.transactionHash,
                            amount: priceInSGB,
                            currency: 'SGB'
                        })
                    });

                    const confirmResult = await confirmResponse.json();
                    if (confirmResult.success) {
                        showCryptoMessage('Thanh toán thành công! Đơn hàng của bạn đã được xác nhận.');
                        setTimeout(() => {
                            window.location.href = '/orders';
                        }, 2000);
                    }
                }
            } catch (error) {
                console.error('Lỗi khi thanh toán:', error);
                showCryptoMessage('Lỗi khi thanh toán: ' + error.message);
            }
        };
    } catch (error) {
        console.error('Lỗi:', error);
        showCryptoMessage('Lỗi: ' + error.message);
    }
}

// Tính và hiển thị giá crypto khi trang tải
document.addEventListener('DOMContentLoaded', () => {
    const productPrice = document.getElementById('product-price').dataset.price;
    const priceInSGB = convertVNDtoSGB(productPrice);
    document.querySelector('.crypto-amount').textContent = priceInSGB;
});
</script>