    <!-- style star -->
     <style>
    .averageRating {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 1.5rem;
    }

    .stars-outer {
    position: relative;
    display: inline-block;
    }

    .stars-outer i {
    color: #ccc; /* sao rỗng */
    }

    .stars-inner {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;        /* sao vàng cao bằng icon */
        overflow: hidden;    /* cắt bớt theo % */
        white-space: nowrap;
    }
    .stars-inner i {
        color: #13b0ff !important; /* màu xanh sáng */
        filter: drop-shadow(0 0 2px #e0f6ff);
    }

    .rating-value {
    font-size: 1rem;
    color: #333;
    }
     </style>

