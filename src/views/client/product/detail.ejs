            <script>
                (function () {
                    try {
                        const priceDisplay = document.getElementById('product-price-display');
                        if (!priceDisplay) return;

                        const basePrice = Number(priceDisplay.dataset.basePrice) || 0;

                        // cryptoActive object passed from server (or null)
                        const cryptoActive = <%- JSON.stringify(cryptoActive || null) %>;
                        const cryptoSymbol = cryptoActive ? (cryptoActive.symbol || cryptoActive.code || '') : '';
                        const cryptoPriceVnd = cryptoActive ? Number(cryptoActive.priceVND) || null : null;
                        const cryptoDecimals = cryptoActive ? (Number(cryptoActive.decimals) || 8) : 8;

                        const cryptoDisplayEl = document.getElementById('product-crypto-display');

                        function formatVnd(n) {
                            return n.toLocaleString('vi-VN');
                        }

                        function formatCrypto(amount) {
                            if (amount === null || amount === undefined || isNaN(amount)) return '';
                            // show up to 8 decimals or cryptoDecimals (bounded)
                            const d = Math.min(8, Math.max(0, cryptoDecimals || 8));
                            return Number(amount).toFixed(d);
                        }

                        function updatePrice() {
                            const selected = document.querySelector('.variant-radio:checked');
                            const priceMore = selected ? (Number(selected.dataset.priceMore) || 0) : (Number(document.querySelector('.variant-radio')?.dataset.priceMore) || 0);
                            const qtyInput = document.getElementById('quantityDetail');
                            const qty = qtyInput ? (Number(qtyInput.value) || 1) : 1;
                            const finalVnd = (basePrice + priceMore) * qty;

                            // update VND display
                            priceDisplay.textContent = formatVnd(finalVnd);

                            // update crypto display if available
                            if (cryptoDisplayEl) {
                                if (cryptoPriceVnd) {
                                    const cryptoAmount = finalVnd / cryptoPriceVnd;
                                    cryptoDisplayEl.textContent = '~ ' + formatCrypto(cryptoAmount) + ' ' + cryptoSymbol;
                                } else {
                                    // if no crypto price, clear or keep server value
                                    // keep existing content
                                }
                            }
                        }

                        // listen to variant changes
                        document.querySelectorAll('.variant-radio').forEach(function (el) {
                            el.addEventListener('change', updatePrice);
                        });

                        // listen to quantity changes if enabled
                        const qtyEl = document.getElementById('quantityDetail');
                        if (qtyEl) {
                            qtyEl.addEventListener('input', updatePrice);
                        }

                        // If no variant selected, pick the first available
                        if (!document.querySelector('.variant-radio:checked')) {
                            const first = document.querySelector('.variant-radio');
                            if (first) first.checked = true;
                        }

                        // initial render
                        updatePrice();
                    } catch (err) {
                        console.error('product detail price update error', err);
                    }
                })();
