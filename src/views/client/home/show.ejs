                <!-- Fruits Shop Start-->
                <div class="container-fluid fruite py-5">
                    <div class="container py-5">
                        <div class="tab-class text-center">
                            <div class="row g-4">
                                <div class="col-lg-4 text-start">
                                    <h3>Sản phẩm nổi bật của chúng tôi</h3>
                                </div>
                                <div class="col-lg-8 text-end">
                                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                                        <li class="nav-item">
                                            <a class="d-flex m-2 py-2 bg-light rounded-pill active"
                                                data-bs-toggle="pill" href="#tab-all">
                                                <span class="text-dark" style="width: 130px;">All Products</span>
                                            </a>
                                        </li>
                                        <% if (factories && factories.length > 0) { %>
                                            <% factories.forEach((factory) => { %>
                                                <li class="nav-item">
                                                    <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-<%= factory.id %>">
                                                        <span class="text-dark" style="width: auto; min-width: 100px;"><%= factory.name %></span>
                                                    </a>
                                                </li>
                                            <% }) %>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                            <div class="tab-content">
                                <div id="tab-all" class="tab-pane fade show p-0 active">
                                    <div class="row g-4">
                                        <div class="col-lg-12">
                                            <div class="row g-4">
                                                <% if (products && products.length > 0) { %>
                                                <% products.forEach((product)=> { %>
                                                    <div class="col-md-6 col-lg-4 col-xl-3 d-flex">
                                                        <div class="rounded position-relative fruite-item d-flex flex-column h-100 product-card"
                                                            data-href="/product/<%= product.id %>"
                                                            style="cursor:pointer;">
                                                            <div class="fruite-img position-relative" style="overflow: hidden;">
                                                                <img src="/images/products/<%= product.image %>"
                                                                    class="img-fluid w-100 rounded-top" alt="" style="object-fit: cover; height: 230px; max-height: 240px; width: 320px; min-width: 300px;"/>
                                                                <div style="position: absolute; left: 0; right: 0; bottom: 0; height: 32%; pointer-events: none; 
                                                                background: linear-gradient(to top, rgba(0,0,0,0.22), rgba(0,0,0,0)); 
                                                                border-bottom-left-radius: inherit; border-bottom-right-radius: inherit;"></div>
                                                                <% if (product.quantity === 0 || product.status === 'OUT_OF_STOCK') { %>
                                                                    <div style="position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);z-index:2;">
                                                                        <span class="text-danger fw-bold bg-white bg-opacity-75 px-3 py-2 rounded" style="font-size:1.2rem;">Đã hết hàng</span>
                                                                    </div>
                                                                <% } %>
                                                            </div>
                                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                                                style="top: 10px; left: 10px;"><%= product.target.name %></div>
                                                            <div
                                                                class="p-4 border border-secondary border-top-0 rounded-bottom mt-auto">
                                                                <h4 style="font-size: 20px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; min-height: 48px;">
                                                                    <%= product.name %>
                                                                </h4>
                                                                <p
                                                                    style="font-size: 14px; text-align: center; width: 100%;">
                                                                    <%= product.shortDesc %>
                                                                </p>
                                                                <div class="d-flex justify-content-center flex-lg-wrap">
                                                                    <p class="fs-5">
                                                                        <%= (product.price + (product.productVariants[0]?.priceMore || 0)).toLocaleString('vi-VN') %> VND
                                                                    </p>
                                                                </div>
                                                                <!-- Nút thêm vào giỏ hàng -->
                                                                <% if (product.quantity === 0 || product.status === 'OUT_OF_STOCK') { %>
                                                                    <div class="mx-auto mt-auto w-100 d-flex flex-column align-items-center justify-content-center">
                                                                        <button type="button" class="btn border border-secondary rounded-pill px-3 text-secondary mt-auto add-to-cart-btn" disabled style="opacity:0.6;cursor:not-allowed;">
                                                                            <i class="fa fa-shopping-bag me-2 text-secondary"></i>
                                                                            Thêm vào giỏ hàng
                                                                        </button>
                                                                    </div>
                                                                <% } else { %>
                                                                    <form action="/add-product-to-cart/<%= product.id %>" method="POST"
                                                                        class="mx-auto mt-auto w-100 d-flex justify-content-center"
                                                                        onClick="event.stopPropagation();">
                                                                        <input type="hidden" name="productVariantId" value="<%= product.productVariants[0]?.id %>">
                                                                        <button type="submit" data-product-id="<%= product.id %>"
                                                                            class="btnAddToCartProduct btn border border-secondary rounded-pill px-3 text-primary mt-auto add-to-cart-btn">
                                                                            <i
                                                                                class="fa fa-shopping-bag me-2 text-primary"></i>
                                                                            Thêm vào giỏ hàng
                                                                        </button>
                                                                    </form>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                    <% } else { %>
                                                        <p>Không có sản phẩm nào.</p>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
